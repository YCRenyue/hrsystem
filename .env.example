# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hr_system
DB_USER=root
DB_PASSWORD=your_db_password_here

# MySQL Docker Configuration
MYSQL_ROOT_PASSWORD=hr_system_root
MYSQL_DATABASE=hr_system
MYSQL_USER=hr_user
MYSQL_PASSWORD=hr_password
MYSQL_PORT=3306

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters
JWT_EXPIRES_IN=24h

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Docker Ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# DingTalk API Configuration
DINGTALK_APP_KEY=your_dingtalk_app_key
DINGTALK_APP_SECRET=your_dingtalk_app_secret
DINGTALK_CORP_ID=your_dingtalk_corp_id

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=HR System <noreply@yourcompany.com>

# Encryption Key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log